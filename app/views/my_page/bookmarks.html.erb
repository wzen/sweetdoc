<% @contents.each do |content| %>
    <div class="contents_row">
        <div class="contents_top">
            <div class="contents_left">
                <div class="thumbnail">
                    <%= image_tag(thumbnail_gallery_path(content[Const::Gallery::Key::GALLERY_ACCESS_TOKEN]), class: 'thumbnail_img', style: 'width:100px;height:100px;')%>
                </div>
            </div>
            <div class="contents_right">
                <div class="contents_top">
                    <div class="title">
                        <%= link_to content[Const::Gallery::Key::TITLE], "/gallery/detail/#{content[Const::Gallery::Key::GALLERY_ACCESS_TOKEN]}" %>
                    </div>
                    <div class="user">
                        <%= link_to content[Const::User::Key::NAME], "/my_page/u=#{content[Const::User::Key::USER_ACCESS_TOKEN]}" %>
                    </div>
                </div>
                <div class="contents_bottom">
                    <div class="tags">
                        <% content[Const::Gallery::Key::TAGS].split(',').each do |t| %>
                            <div class="tag_name"><%= t %></div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
        <div class="contents_bottom">
            <div class="caption">
                <%= content[Const::Gallery::Key::CAPTION] %>
            </div>
        </div>
    </div>
<% end %>