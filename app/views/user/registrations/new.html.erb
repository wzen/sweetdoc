<div id="wrapper">
    <div class="content_wrapper">
        <div id="new-wrapper">
            <div id="header">Sign Up</div>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>

                <div class="form-item">
                    <%= f.label :name %><br />
                    <%= f.text_field :name, required: 'required', placeholder: 'User Name' %>
                </div>
                <div class="form-item">
                    <%= f.label :email %><br />
                    <%= f.email_field :email, autofocus: true, required: 'required', placeholder: 'Email Address' %>
                </div>

                <div class="form-item">
                    <%= f.label :password %>
                    <% if @minimum_password_length %>
                        <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %><br />
                    <%= f.password_field :password, autofocus: "off", required: 'required', placeholder: 'Password' %>
                </div>

                <div class="form-item">
                    <%= f.label :password_confirmation %><br />
                    <%= f.password_field :password_confirmation, autocomplete: "off", required: 'required', placeholder: 'Confirm Password' %>
                </div>

                <div class="button-panel submit">
                    <%= f.submit 'Sign Up', class:'button', title:'Sign Up' %>
                </div>
            <% end %>
            <%= render "user/shared/links" %>
        </div>
    </div>
</div>