<div class="event">
    <div class="config">
        <div class="configBox">
            <div class="timelineedit-headliner">Target</div>
            <div class="forms">
                <!-- イベント対象一覧 -->
                <!-- ワークスペース読み込み時に設定 -->
                <select class="form-control te_item_select" name="te_item_select">
                    <option value="">(Select)</option>
                    <% @common_action_events.each do |c| %>
                      <option value="<%= "#{Const::TIMELINE_COMMON_PREFIX + c.action_event_type_id.to_s}" %>"><%= c.options['name'] %></option>
                    <% end %>
                </select>
            </div>
        </div>
    </div>
    <div class="config te_div action_div" style="display: none">
        <div class="configBox">
            <div class="timelineedit-headliner">Action</div>
            <div class="forms action_forms">
                <!-- アクション名一覧 -->
                <div class="<%= "#{Const::TIMELINE_COMMON_ACTION_CLASSNAME}" %>" style="display: none">
                    <ul>
                        <li class='push method scroll'>
                            Scroll
                            <input class='action_type' type='hidden' value='0'>

                        </li>
                        <li class='push method click'>
                            Click
                            <input class='action_type' type='hidden' value='1'>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="config te_div scroll_point_div" style="display: none">
        <div class="configBox">
            <div class="timelineedit-headliner">ScrollPoint</div>
            <div class="forms">
                <!-- スクロールポイント -->
                <input class="scroll_point_start" type="number" value="" style="float: left" >
                <div style="float: left"> - </div>
                <input class="scroll_point_end" type="number" value="" style="float: left" >
                <br style="clear: both">
            </div>
        </div>
    </div>
    <div class="config te_div click_parallel_div" style="display: none">
        <div class="configBox">
            <div class="timelineedit-headliner">ClickParallel</div>
            <div class="forms">
                <!-- クリック同時実行 -->
                <input class="click_parallel" name="click_parallel" type="checkbox"><label for="click_parallel">Click Parallel</label>
            </div>
        </div>
    </div>
    <div class="config te_div values_div" style="display: none">
        <div class="configBox">
            <div class="timelineedit-headliner">Value</div>
            <div class="forms value_forms">
                <!-- イベント毎の設定値 -->
                <% @common_action_events.each do |c| %>
                    <div class="<%= "c_#{c.action_event_type_id}" %>" style="display: none">
                      <% if c.action_event_type_id == Const::CommonActionEventChangeType::BACKGROUNDCOLOR_CHANGE  %>
                        <%= render 'worktable/sidebar_menu/timeline/parts/backgroundcolor_change' %>
                      <% elsif c.action_event_type_id == Const::CommonActionEventChangeType::SCREENPOSITION_CHANGE %>
                        <%= render 'worktable/sidebar_menu/timeline/parts/screenposition_change' %>
                      <% end %>
                    </div>
                <% end %>
            </div>
            <div class="forms">
                <button class="push button reset" style="margin-top: 10px">reset change</button><br/>
                <button class="push button apply" style="margin-top: 10px">Apply</button><br/>
                <button class="push button cancel" style="margin-top: 10px">Close(Not apply)</button>
                <input class="confirm" type="hidden" value="OK?(Confirm)">
            </div>
        </div>
    </div>

    <!-- エラー -->
    <div class="timeline_config_error error-message">
        <div><p></p></div>
    </div>

    <div class="values"></div>
</div>