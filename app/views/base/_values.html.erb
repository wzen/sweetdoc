<% general_pagevalues = nil if general_pagevalues.nil? %>
<% instance_pagevalues = nil if instance_pagevalues.nil? %>
<% event_pagevalues = nil if event_pagevalues.nil? %>
<% is_runwindow_reload = false if is_runwindow_reload.nil? %>

<%= form_tag("/run", method: "post", name: "run_form") do %>
    <div id="<%= Const::PageValueKey::G_ROOT %>">
        <% if general_pagevalues != nil %>
            <%= general_pagevalues.html_safe %>
        <% else %>
            <div class="<%= Const::PageValueKey::G_PREFIX %>">
                <input type="hidden" class="<%= Const::PageValueKey::PAGE_COUNT %>" value="1" >
                <input type="hidden" class="<%= Const::PageValueKey::PAGE_NUM %>" value="1" >
            </div>
        <% end %>
    </div>

    <div id="<%= Const::PageValueKey::IS_ROOT %>">
        <% if is_runwindow_reload %>
            <input type="hidden" class="<%= Const::PageValueKey::IS_RUNWINDOW_RELOAD %>" value="true" >
        <% end %>
        <% if instance_pagevalues != nil %>
            <%= instance_pagevalues.html_safe %>
        <% end %>
    </div>

    <div id="<%= Const::PageValueKey::ST_ROOT %>">
    </div>

    <div id="<%= Const::PageValueKey::E_ROOT %>">
        <% if event_pagevalues != nil %>
            <%= event_pagevalues.html_safe %>
        <% end %>
    </div>
<% end %>
