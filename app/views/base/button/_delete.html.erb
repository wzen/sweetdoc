<%
   link_url = '' if link_url.nil?
   params = {} if params.nil?
   confirm_message = I18n.t('mypage.message.default_delete_message') if confirm_message.nil?
%>
<%= form_tag link_url  do  %>
    <% params.each do |k, v| %>
        <input type="hidden" name="<%= k %>" value="<%= v %>">
    <% end %>
    <%= button_tag(onclick: '_mypageDeleteConfirm(this); return false;', class:'delete_button image_button', style: 'margin-top: 5px;margin-bottom: 5px') do %>
        <%= image_tag 'etc/delete.png', size: '24x24' %>
    <% end %>
<% end %>

<script type="text/javascript">
  var _mypageDeleteConfirm = function(e) {
    if (window.confirm('<%= confirm_message %>')) {
      $(e).closest('form').submit()
    }
  }
</script>

