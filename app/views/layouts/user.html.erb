<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Sweetdoc[β]</title>
  <%= favicon_link_tag 'favicon.ico' %>
  <%= include_gon %>
  <%= csrf_meta_tag %>
  <%= display_meta_tags({
                                title: "Sweetdoc[β]" ,
                                description: 'Active document maker',
                                viewport: "width=device-width, initial-scale=1"
                        })
  %>
  <%= stylesheet_link_tag 'pipeline/user', media: 'all', 'data-turbolinks-track' => true %>
</head>
<body class="<%= controller_name -%> <%= action_name -%>">
    <div id="main_gallery_wrapper">
      <div id="gallery_contents_wrapper">
        <% if notice %>
            <p class="alert alert-success"><%= notice %></p>
        <% end %>
        <% if alert %>
            <p class="alert alert-danger"><%= alert %></p>
        <% end %>

        <%= yield %>
      </div>
      <div id="sidebar_wrapper" class="collapse">
        <%= render 'gallery/sidebar/sidebar' %>
        <%= render 'gallery/sidebar/popup' %>
      </div>
    </div>

    <%= javascript_include_tag 'pipeline/user', 'data-turbolinks-track' => true %>
    <%= render 'base/js_init' %>
    <%= render 'modal_view/preload/preload' %>
</body>
</html>
