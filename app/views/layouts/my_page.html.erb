<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>DDesk</title>
    <%= favicon_link_tag '/assets/favicon.ico' %>
    <%= include_gon %>
    <%= csrf_meta_tag %>
    <%= display_meta_tags({
                                  title: "DDesk Gallery" ,
                                  description: 'welcome revolver',
                                  viewport: "width=device-width, initial-scale=1"
                          })
    %>
</head>
<body class="<%= controller_name -%> <%= action_name -%>">
*** Temporary ***
    <div id="main_wrapper">
        <div id="user_wrapper">
            <%= render 'my_page/user' %>
        </div>
        <div id="contents_wrapper">
            <div class="wrapper">
                <div id="<%= Const::ElementAttribute::SIDEBAR_TAB_ROOT %>" class="sidebar-config" style="display: none">
                    <ul class="nav nav-tabs">
                        <li class="<%= action_name == 'bookmark'? 'active': '' %>"><%= link_to 'Bookmark', 'my_page/bookmark', disabled: action_name == 'bookmark' %></li>
                        <li class="<%= action_name == 'created_contents'? 'active': '' %>"><%= link_to 'CreatedContents', 'my_page/created_contents', disabled: action_name == 'created_contents' %></li>
                        <li class="<%= action_name == 'created_item'? 'active': '' %>"><%= link_to 'CreatedItem', 'my_page/created_item', disabled: action_name == 'created_item' %></li>
                        <% if @is_access_me %>
                            <li class="<%= action_name == 'using_item'? 'active': '' %>"><%= link_to 'UsingItem', 'my_page/using_item', disabled: action_name == 'using_item' %></li>
                        <% end %>
                    </ul>
                    <div id="myTabContent" class="tab-content">
                        <div class="tab-pane fade in active">
                            <div class="scroll_y_content border">
                                <p>
                                    <%= yield %>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <%= render 'gallery/sidebar/popup' %>
            </div>
        </div>
        <div id="sidebar_wrapper" class="collapse">
            <%= render 'gallery/sidebar/sidebar' %>
        </div>
    </div>

    <%= stylesheet_link_tag 'pipeline/my_page', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'pipeline/my_page', 'data-turbolinks-track' => true %>

    <script type="text/javascript">
        I18n.defaultLocale = "<%= I18n.default_locale %>";
        I18n.locale = "<%= I18n.locale %>";
        I18n.fallbacks = true;
    </script>
</body>
</html>
