<div class="modal-content <%= Const::ModalViewType::INIT_PROJECT %>">
    <div class="content">
        <div class="project_create_wrapper">
            <div>
                <div style="display: inline-block">
                    <label><input type="radio" name="project_create" value="select" checked><%= I18n.t('modal.project_select') %></label>
                </div>
                <div style="display: inline-block">
                    <label><input type="radio" name="project_create" value="new"><%= I18n.t('modal.project_create') %></label>
                </div>
            </div>
        </div>
        <div class="display_project_new_wrapper">
            <div class="label_div">
                <label><%= I18n.t('modal.project_name') %>:</label>
            </div>
            <div>
                <input name="project_name" class="project_name" type="text" maxlength="30" required="required"><br />
            </div>
        </div>
        <div class="display_project_select_wrapper">
            <div class="label_div">
                <label><%= I18n.t('modal.select_project') %>:</label>
            </div>
            <div style="vertical-align: middle">
                <select class="project_select"></select>
            </div>
        </div>
        <div class="button_wrapper">
            <div>
                <span class="new"><button class="create_button button_red width90per" value="Create"><%= I18n.t('modal.button.create') %></button></span>
                <span class="select"><button class="open_button button_red width90per" value="Open"><%= I18n.t('modal.button.open') %></button></span>
                <button class="back_button button_black width90per" value="Back to MainPage"><%= I18n.t('modal.button.back') %></button>
            </div>
        </div>
      <div class="error_wrapper" style="display: none">
        <div class="error">
        </div>
      </div>
    </div>
</div>