<div class="modal-content <%= Const::ModalViewType::INIT_PROJECT %>">
    <div class="content">
        <div class="project_create_wrapper" style="display: none">
            <div>
                <div style="display: inline-block">
                    <input type="radio" name="project_create" value="new" checked>Create
                </div>
                <div style="display: inline-block">
                    <input type="radio" name="project_create" value="select">Select
                </div>
            </div>
        </div>
        <div class="display_project_new_wrapper">
            <div class="cell_label">
                <label>Project name:</label>
            </div>
            <div>
                <input name="project_name" class="project_name" type="text" /><br />
            </div>
        </div>
        <div class="display_project_new_wrapper">
            <div>
                <label>Display Size:</label>
            </div>
            <div>
                <div class="display_size_wrapper">
                    <label>
                        <input type="radio" name="project_size" value="default" checked>Fit (<span class="default_window_size"></span>)
                    </label>
                    <label>
                        <input type="radio" name="project_size" value="input">Input
                    </label>
                </div>
                <div class="display_size_input_wrapper" style="display: none">
                    <div style="display: inline-block">
                        Width:<input class="display_size_input_width" type="number" value="" maxlength="4">
                    </div>
                    <div style="display: inline-block">
                        Height:<input class="display_size_input_height" type="number" value="" maxlength="4">
                    </div>
                </div>
            </div>
        </div>
        <div class="display_project_select_wrapper" style="display: none">
            <div class="cell_label">
                <label>Select project:</label>
            </div>
            <div style="vertical-align: middle">
                <select class="project_select"></select>
            </div>
        </div>
        <div>
            <div>
                <button class="create_button" value="Create">Create</button>
            </div>
        </div>
    </div>
</div>